{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
        "type": "file",
        "source": ".config/fastfetch/logo.txt",
        "padding": { "left": 3 },
        "color": {
            "1": "white",
            "2": "red"
        }
    },
    "display": {
      "separator": " "
     },
    "modules": [
        {
            "type": "os",
            "key": "╭─ ", // Just get your distro's logo off nerdfonts.com
            "keyColor": "blue"
        },
        {
            "type": "kernel",
            "key": "├─ ",
            "keyColor": "blue"
        },
        {
            "type": "command",
            "text": "birth_install=$(stat -c %W /); current=$(date +%s); time_progression=$((current - birth_install)); days_difference=$((time_progression / 86400)); echo $days_difference days",
            "key": "├─󰃭 ",
            "keyColor": "blue"
        },
	    {
            "type": "uptime",
            "key": "╰─ ",
            "keyColor": "blue"
        },
        "break",
        {
            "type": "host",
            "key": "╭─󰌢 ",
            "format": "{1}",
            "keyColor": "green"
        },
        {
            "type": "cpu",
            "key": "├─ ",
            "format": "{1}",
            "keyColor": "green"
        },
        {
            "type": "gpu",
            "key": "├─󰾲 ",
            "format": "{2}",
            "keyColor": "green"
        },
        {
            "type": "memory",
            "key": "╰─ ",
            "keyColor": "green",
            "format": "{2}"
        },
        "break",
        {
            "type": "theme",
            "key": "╭─󰉼 ",
            "keyColor": "magenta"
        },
        {
            "type": "icons",
            "key": "├─ ",
            "keyColor": "magenta"
        },
        {
            "type": "terminalfont",
            "key": "├─󰛖 ",
            "keyColor": "magenta",
            "format": "{2}"
        },
	/*{
            "type": "colors",
            "symbol": "circle",
            "key": "╰─󰌁 ",
            "keyColor": "magenta"
    	}*/
	{
            "type": "command",
            "format": "{#33}󰮯 {#31} {#32} {#34} {#35}",
            "key": "╰─󰌁 ",
            "keyColor": "magenta"
    	}
    ]
}